{
    "name": "bcomp-asm",
    "displayName": "Basic Computer Assembly",
    "version": "0.0.1",
    "publisher": "mamsdeveloper",
    "description": "A vscode language server that enables highlighting and completion for Basic Computer assembly files.",
    "author": {
        "name": "Mikhail Butvin"
    },
    "license": "MIT",
    "keywords": [
        "bcomp-asm",
        "assembler",
        "bcomp"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mamsdeveloper/bcomp-asm"
    },
    "bugs": {
        "url": "https://github.com/mamsdeveloper/bcomp-asm/issues"
    },
    "engines": {
        "vscode": "^1.71.0",
        "node": "^16.14.0"
    },
    "icon": "assets/icon.png",
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "type": "webview",
                    "id": "bcomp-asm.calcview-explorer",
                    "name": "Hexadecimal Calculator",
                    "icon": "assets/hexcalc_icon.svg",
                    "contextualTitle": "Hex Calculator",
                    "when": "config.bcomp-asm.hexCalculator.showInExplorer"
                }
            ],
            "debug": [
                {
                    "type": "webview",
                    "id": "bcomp-asm.calcview-debug",
                    "name": "Hexadecimal Calculator",
                    "icon": "assets/hexcalc_icon.svg",
                    "contextualTitle": "Hex Calculator",
                    "when": "config.bcomp-asm.hexCalculator.showInDebug"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "bcomp-asm configuration",
            "properties": {
                "bcomp-asm.enableOutlineView": {
                    "scope": "window",
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enable/disable outline view for the active document."
                },
                "bcomp-asm.enableCodeLenses": {
                    "scope": "window",
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enable/disable the display of code lenses (references) above labels."
                },
                "bcomp-asm.enableHovering": {
                    "scope": "window",
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enable/disable the of showing information while hovering labels etc."
                },
                "bcomp-asm.enableCompletions": {
                    "scope": "window",
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enable/disable symbol input completion."
                },
                "bcomp-asm.completionsRequiredLength": {
                    "scope": "window",
                    "type": "number",
                    "default": 1,
                    "markdownDescription": "The number of characters required before completion proposals will be presented."
                },
                "bcomp-asm.enableGotoDefinition": {
                    "scope": "window",
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enable/disable 'Go to Type Definition'. You need to reload the extension to take effect."
                },
                "bcomp-asm.enableFindAllReferences": {
                    "scope": "window",
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enable/disable 'Find All References'."
                },
                "bcomp-asm.enableRenaming": {
                    "scope": "window",
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enable/disable the possibility to rename labels. You need to reload the extension to take effect."
                },
                "bcomp-asm.excludeFiles": {
                    "scope": "window",
                    "type": "string",
                    "default": "",
                    "markdownDescription": "Choose what files or directories to exclude e.g `**/*.{inc,s}`."
                },
                "bcomp-asm.hexCalculator.showInExplorer": {
                    "scope": "window",
                    "markdownDescription": "Set to false to disable calculator in explorer view.",
                    "type": "boolean",
                    "default": true
                },
                "bcomp-asm.hexCalculator.showInDebug": {
                    "scope": "window",
                    "markdownDescription": "Set to false to disable calculator in debug view.",
                    "type": "boolean",
                    "default": true
                },
                "bcomp-asm.hexCalculator.hexPrefix": {
                    "scope": "window",
                    "markdownDescription": "The prefix to use for hex values, e.g. `0x` or `$`",
                    "type": "string",
                    "default": "0x"
                },
                "bcomp-asm.donated": {
                    "scope": "window",
                    "markdownDescription": "If you donated (press the `Donate...` button in hex calculator to do so) you can hide the button by setting this parameter.",
                    "type": "boolean",
                    "default": false
                },
                "bcomp-asm.comments.toggleLineCommentPrefix": {
                    "scope": "window",
                    "markdownDescription": "Configure the prefix used when toggling the line comment.",
                    "type": "string",
                    "default": ";"
                },
                "bcomp-asm.labels.colon": {
                    "scope": "window",
                    "markdownDescription": "Determines if labels with or without or both should be recognized.\nPlease note: labels without colons cannot be determined in list files.",
                    "type": "string",
                    "enum": [
                        "Both",
                        "With colon",
                        "Without colon"
                    ],
                    "enumDescriptions": [
                        "Labels with and without a trailing colon",
                        "Only labels with a trailing colon",
                        "Only labels without a trailing colon"
                    ],
                    "default": "Both"
                },
                "bcomp-asm.labels.excludes": {
                    "scope": "window",
                    "markdownDescription": "Configure here a comma separated list of words that should not be recognized as labels. E.g. if bcomp-asm wrongly interprets an assembler directive as label you can exclude it here. For example `if;then;else;elif;endif`. The exclude is case-insensitive.",
                    "type": "string",
                    "default": ""
                }
            }
        },
        "commands": [
            {
                "command": "bcomp-asm.whatsNew",
                "title": "Show 'What's New' page of this bcomp-asm release.",
                "category": "bcomp-asm"
            },
            {
                "command": "bcomp-asm.find-labels-with-no-reference",
                "title": "Find Labels with no Reference",
                "category": "bcomp-asm"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == bcomp-asm",
                    "command": "bcomp-asm.find-labels-with-no-reference",
                    "group": "0_navigation@10"
                }
            ],
            "commandPalette": [
                {
                    "command": "bcomp-asm.find-labels-with-no-reference",
                    "when": "false"
                }
            ]
        },
        "languages": [
            {
                "id": "bcomp-asm",
                "extensions": [
                    ".bcomp"
                ],
                "aliases": [
                    "Bcomp Assembly"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bcomp-asm",
                "scopeName": "source.asm",
                "path": "./grammar/bcomp.json"
            },
            {
                "language": "asm-list-markdown-codeblock",
                "scopeName": "markdown.asm.list.codeblock",
                "path": "./grammar/asm_list_markdown_codeblock.json",
                "injectTo": [
                    "text.html.markdown"
                ]
            }
        ],
        "problemMatchers": [
            {
                "name": "problem-matcher-sjasmplus",
                "owner": "bcomp-asm",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*)\\((\\d+)\\):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                ]
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "tslint": "eslint ./**/*.ts",
        "watch": "tsc -w -p ./",
        "test": "mocha -u tdd 'out/**/*.tests.js'",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "dependencies": {
        "assert": "^2.0.0",
        "fast-glob": "^3.2.11",
        "fs-extra": "^10.0.1",
        "grepit": "^1.0.0",
        "jsonc-parser": "^3.0.0",
        "ts-node": "^10.7.0"
    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.21",
        "@types/vscode": "^1.65.0",
        "mocha": "^9.2.2",
        "source-map-support": "^0.5.21",
        "typescript": "^4.6.2"
    }
}
